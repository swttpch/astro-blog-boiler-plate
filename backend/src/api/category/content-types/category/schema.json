{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "icon": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "color": {
      "type": "string",
      "default": "#D53F8C",
      "regex": "^#[a-zA-Z0-9]{3,6}$"
    },
    "bgColor": {
      "type": "string",
      "default": "#FFE2E4",
      "regex": "^#[a-zA-Z0-9]{3,6}$"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "articles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article",
      "inversedBy": "category"
    },
    "metaTitle": {
      "type": "string",
      "required": true
    },
    "metaDescription": {
      "type": "text",
      "required": true
    },
    "canonicalUrl": {
      "type": "string"
    }
  }
}

{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Articles",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": {}
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::author.author"
    },
    "mainImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ],
      "pluginOptions": {}
    },
    "isTrending": {
      "type": "boolean",
      "default": false,
      "pluginOptions": {}
    },
    "isTopPick": {
      "type": "boolean",
      "default": false,
      "pluginOptions": {}
    },
    "readingTime": {
      "type": "string",
      "pluginOptions": {}
    },
    "previewText": {
      "type": "text",
      "required": true,
      "maxLength": 100,
      "pluginOptions": {}
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "pluginOptions": {},
      "required": false
    },
    "relatedArticles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article"
    },
    "content": {
      "type": "customField",
      "options": {
        "output": "HTML",
        "preset": "standard"
      },
      "customField": "plugin::ckeditor.CKEditor",
      "pluginOptions": {}
    },
    "categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category"
    },
    "tags": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tag.tag"
    },
    "likes": {
      "required": true,
      "default": 0,
      "type": "integer",
      "min": 0
    },
    "usefullCount": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0
    },
    "uselessCount": {
      "type": "integer",
      "default": 0,
      "required": true,
      "min": 0
    }
  }
}

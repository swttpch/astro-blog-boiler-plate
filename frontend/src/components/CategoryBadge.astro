---
import type { HTMLAttributes } from 'astro/types';
import { twMerge } from 'tailwind-merge';
type Props = HTMLAttributes<'div'>;

const { class: className, ...props } = Astro.props;
---

<div
  class={twMerge(
    'TypeTags px-12 py-4 flex justify-start items-center gap-8 bg-primary-lighter text-primary-base text-xs lg:text-sm font-medium rounded-xs border border-primary-200',
    className,
  )}
  {...props}
>
  <slot />
</div>

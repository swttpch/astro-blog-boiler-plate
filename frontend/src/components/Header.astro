---
import HeaderLink from './HeaderLink.astro';
import Screen from './Screen.astro';
import Container from './Container.astro';
import type Image from '../interfaces/image';
import ApiImage from './ApiImage.astro';

type Props = {
  brand: Image;
}
const {brand} = Astro.props;
---
<header
  class="Navbar w-full lg:px-28 bg-white border-b lg:border-b-0 border-gray-200 sticky top-0 justify-center items-center lg:items-stretch z-30"
>
  <Screen class="py-0 lg:py-0 h-[72px] lg:h-[96px] ">
    <Container class={'py-0 lg:py-0 h-full items-center justify-between'}>
      <ApiImage image={brand} class={'w-[139px] lg:w-[186px]'} />
      <nav class="Navigation hidden lg:flex justify-start items-stretch self-stretch">
        <HeaderLink href="/"> Inicio </HeaderLink>
        <HeaderLink href="/categoria"> Categoria </HeaderLink>
        <HeaderLink href="/categoria"> Categoria </HeaderLink>
        <HeaderLink href="/categoria"> Categoria </HeaderLink>
        <HeaderLink href="/categoria"> Categoria </HeaderLink>
      </nav>
      <button class='lg:hidden'>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
        >
          <path
            d="M5.49805 12.0002H18.5031"
            stroke="#596066"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
          <path
            d="M5.49805 16.0022H18.5031"
            stroke="#596066"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
          <path
            d="M5.49707 7.99826H18.5021"
            stroke="#596066"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </button>
    </Container>
  </Screen>
</header>

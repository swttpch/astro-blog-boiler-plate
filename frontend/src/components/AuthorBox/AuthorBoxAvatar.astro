---
import type { HTMLAttributes } from 'astro/types'
import { twMerge } from 'tailwind-merge'

type Props = {src?: string, name: string} & HTMLAttributes<'img'>
const {src, class: className,name,  ...rest} = Astro.props
const fallback = 'https://via.placeholder.com/48x48'

---

<img
  class={twMerge(['w-[48px] h-[48px] relative rounded-full', className])}
  src={src ? `${import.meta.env.NODE_ENV === 'development' ? import.meta.env.STRAPI_URL: ''}`+src : fallback}
  alt={name}
  {...rest}
/>

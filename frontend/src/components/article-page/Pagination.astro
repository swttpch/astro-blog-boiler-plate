---
import type Article from '../../interfaces/article';

type Props = {
  prevArticle: Article;
  nextArticle: Article;
}

const {prevArticle, nextArticle} = Astro.props
---
<div class="pb-[48px] border-tl-8 border-tr-8 justify-center items-start gap-32 flex self-stretch">
  <div class="flex-[1] flex flex-col justify-start items-start gap-12">
    <p class="self-stretch text-text-soft text-sm font-semibold  break-words">Artigo anterior</p>
    <a href={prevArticle.attributes.slug} class="self-start text-text-main text-lg font-semibold break-words">{prevArticle.attributes.title}</a>
  </div>
  <div class="flex-[1] flex flex-col justify-start items-end gap-12">
    <p class=" text-text-soft text-sm font-semibold break-words self-stretch text-right">Pr√≥ximo Artigo</p>
    <a href={nextArticle.attributes.slug} class="self-end text-text-main text-lg font-semibold  break-words text-right">{nextArticle.attributes.title}</a>
  </div>
</div>